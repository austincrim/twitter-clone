datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  id        Int      @default(autoincrement()) @id
  text      String
  createdAt DateTime @default(now())
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model User {
  id       Int     @default(autoincrement()) @id
  username String
  password String
  tweets   Tweet[]
}
